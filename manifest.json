{
  "name": "BITE",
  "version": "1.0.0.0",
  "description": "BITE is a suite of tools that lets you test the web from the web, offering tools that accelerate exploratory testing.",
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "imgs/bite_logo_19.png",
    "default_title": "BITE",
    "popup": "popup.html"
  },
  "icons": {
    "48": "imgs/bite-logo_100x100.png",
    "128": "imgs/bite-logo_100x100.png"
  },
  "background_page": "background.html",
  "content_scripts": [
    {
      "js": [ "getactioninfo_script.js" ],
      "matches": [ "*://*/*" ],
      "all_frames": true
    }, {
      "js": [ "content_script.js" ],
      "matches": [ "*://*/*" ],
      "exclude_globs": [ "*://code.google.com/*" ]
    }
  ],
  "permissions": [
    "tabs",
    "<all_urls>",
    "management"
  ]
}

